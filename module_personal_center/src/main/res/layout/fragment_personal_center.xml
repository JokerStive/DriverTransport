<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="87dp"
                android:layout_marginTop="56dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="33dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pingfang_sc_bold"
                        android:paddingLeft="20dp"
                        android:textColor="@color/module_base_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_phone_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/pingfang_sc_bold"
                        android:paddingLeft="20dp"
                        android:textColor="@color/module_base_color"
                        android:textSize="14sp" />
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_avatar"
                    android:layout_width="78dp"
                    android:layout_height="78dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="53dp"
                    android:background="@mipmap/avatar_border"
                    android:padding="1dp"
                    android:src="@mipmap/logo" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="53dp"
                android:paddingRight="53dp">

                <TextView
                    android:id="@+id/tv_update_bank_card_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="27dp"
                    android:drawableLeft="@mipmap/update_bank_card_info"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/pingfang_sc_bold"
                    android:gravity="center_vertical"
                    android:text="@string/update_bank_card_info"
                    android:textColor="@color/module_base_color" />

                <TextView
                    android:id="@+id/tv_update_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="27dp"
                    android:drawableLeft="@mipmap/update_password"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/pingfang_sc_bold"
                    android:gravity="center_vertical"
                    android:text="@string/update_password"
                    android:textColor="@color/module_base_color" />


                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="79dp"
                    android:drawableLeft="@mipmap/logout"
                    android:drawablePadding="20dp"
                    android:fontFamily="@font/pingfang_sc_bold"
                    android:gravity="center_vertical"
                    android:text="@string/logout"
                    android:textColor="@color/module_base_color" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
