<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:textSize="26sp"
                android:fontFamily="@font/pingfang_sc_bold"
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="@string/demo_username"
                android:textColor="@color/module_base_color" />

            <TextView
                android:textSize="18sp"
                android:fontFamily="@font/pingfang_sc_bold"
                android:id="@+id/tv_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="20dp"
                android:text="@string/demo_phone"
                android:textColor="@color/module_base_color" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_centerVertical="true"
            android:id="@+id/civ_avatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/module_base_color"
            app:civ_border_width="1dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:fontFamily="@font/pingfang_sc_bold"
            android:id="@+id/tv_update_bank_card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@mipmap/update_bank_card_info"
            android:drawablePadding="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/update_bank_card_info"
            android:textColor="@color/module_base_color" />

        <TextView
            android:fontFamily="@font/pingfang_sc_bold"
            android:id="@+id/tv_update_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@mipmap/update_password"
            android:drawablePadding="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/update_password"
            android:textColor="@color/module_base_color" />


        <TextView
            android:fontFamily="@font/pingfang_sc_bold"
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@mipmap/logout"
            android:drawablePadding="50dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="@string/logout"
            android:textColor="@color/module_base_color" />

    </LinearLayout>
</LinearLayout>