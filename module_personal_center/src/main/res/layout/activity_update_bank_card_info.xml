<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/srl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:padding="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:drawableLeft="@mipmap/back"
                android:fontFamily="@font/pingfang_sc_bold"
                android:gravity="center"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:text="@string/bank_card_info_update"
                android:textColor="@color/module_base_color"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_origin_bank_card_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="31dp"
                android:drawableLeft="@mipmap/title_hint"
                android:drawablePadding="15dp"
                android:fontFamily="@font/pingfang_sc_bold"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/origin_bank_card_info"
                android:textColor="@color/module_base_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rl_bank_card_info"
                android:layout_width="242dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="35dp"
                android:background="@mipmap/bank_card_bg">

                <TextView
                    android:id="@+id/tv_bank_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/pingfang_sc_bold"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_bank_name"
                    android:layout_marginLeft="24dp"
                    android:fontFamily="@font/pingfang_sc_bold"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_bank_card_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_account_name"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="35dp"
                    android:fontFamily="@font/pingfang_sc_bold"
                    android:paddingTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_update_bank_card_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:drawableLeft="@mipmap/title_hint"
                android:drawablePadding="15dp"
                android:fontFamily="@font/pingfang_sc_bold"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="@string/update_bank_card_info"
                android:textColor="@color/module_base_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:drawableLeft="@mipmap/hint"
                android:drawablePadding="15dp"
                android:fontFamily="@font/pingfang_sc_bold"
                android:text="@string/update_bank_card_info_hint"
                android:textColor="@color/hint_text_color"
                android:textSize="10sp" />

            <com.tengbo.module_personal_center.custom.view.NoEmojiEditText
                android:id="@+id/neet_password"
                style="@style/UpdatePasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:hint="@string/please_input_login_password"
                android:inputType="textPassword" />

            <com.tengbo.module_personal_center.custom.view.NoEmojiEditText
                android:id="@+id/neet_id_card_num"
                style="@style/UpdatePasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:hint="@string/please_input_id_card_num"
                android:inputType="text"
                android:maxLength="18" />

            <com.tengbo.module_personal_center.custom.view.NoEmojiEditText
                android:id="@+id/neet_name_of_account"
                style="@style/UpdatePasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:hint="@string/please_input_name_of_account"
                android:inputType="textPersonName" />

            <com.tengbo.module_personal_center.custom.view.NoEmojiEditText
                android:id="@+id/neet_bank_card_num"
                style="@style/UpdatePasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:hint="@string/please_input_bank_card_num"
                android:inputType="number"
                android:maxLength="19" />

            <com.tengbo.module_personal_center.custom.view.NoEmojiEditText
                android:id="@+id/neet_bank_of_account"
                style="@style/UpdatePasswordEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:enabled="false"
                android:hint="@string/bank_of_account_hint"
                android:inputType="text" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="29dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="33dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/valid_code" />

                <com.tengbo.module_personal_center.custom.view.NoEmojiEditText
                    android:id="@+id/neet_valid_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableBottom="@drawable/underline"
                    android:fontFamily="@font/pingfang_sc_bold"
                    android:gravity="center"
                    android:hint="@string/please_input_valid_code"
                    android:inputType="text"
                    android:maxLength="4"
                    android:textColor="@color/module_base_color"
                    android:textColorHint="@color/module_base_color"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_valid_code"
                    android:layout_width="70dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp" />

                <TextView
                    android:id="@+id/tv_refresh_valid_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pingfang_sc_bold"
                    android:text="@string/refresh"
                    android:textColor="@color/module_base_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/selector_btn_submit" />

                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="90dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="70dp"
                    android:background="@drawable/selector_btn_cancel" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.SwipeRefreshLayout>