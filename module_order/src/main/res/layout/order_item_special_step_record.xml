<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="@dimen/dp_10"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_step_name"
            style="@style/tv_10sp_blue_bold"
            android:maxLines="1"
            android:text="装货"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal" />



        <TextView
            android:id="@+id/tv_step_address"
            style="@style/tv_10sp_blue_bold"
            android:maxLines="1"
            android:text="重庆富士康"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_step_time"
            style="@style/tv_10sp_blue_bold"
            android:maxLines="1"
            android:text="1991-10-22"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal"
            />

        <com.tengbo.basiclibrary.widget.ninegridimageview.NineGridImageView
            android:id="@+id/nine_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:imgGap="3dp"
            app:showStyle="grid" />
    </LinearLayout>
</android.support.v7.widget.CardView>