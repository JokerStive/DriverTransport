<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/basic_white"
    android:orientation="vertical">


    <EditText
        android:textColor="@color/basic_blue"
        android:id="@+id/et_inspection_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/shape_edit_text_border"
        android:gravity="top"
        android:hint="@string/please_input_find_problem_instruction"
        android:padding="10dp"
        android:textColorHint="@color/basic_blue"
        android:textSize="@dimen/sp_12" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/common_selector_text_button"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/basic_blue"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/common_selector_text_button"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/basic_blue"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal" />


    </LinearLayout>

</LinearLayout>
