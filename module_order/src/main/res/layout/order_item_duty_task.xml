<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true"

    >

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/duty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/dp_12"
                android:maxLines="1"
                android:id="@+id/tv_container_code"
                style="@style/tv_10sp_blue_bold"
                android:padding="@dimen/dp_4"
                android:text="柜号：YU88888888"
                android:textStyle="normal" />


            <TextView
                android:textSize="@dimen/sp_12"
                android:maxLines="1"
                android:id="@+id/tv_operation_type"
                style="@style/tv_10sp_blue_bold"
                android:padding="@dimen/dp_4"
                android:text="动作：装货"
                android:textStyle="normal" />

            <TextView
                android:textSize="@dimen/sp_12"
                android:maxLines="1"
                android:id="@+id/tv_create_time"
                style="@style/tv_10sp_blue_bold"
                android:padding="@dimen/dp_4"
                android:text="开始时间：8月2日 19：20"
                android:textStyle="normal" />

            <TextView
                android:textSize="@dimen/sp_12"
                android:maxLines="1"
                android:id="@+id/tv_operation_time"
                style="@style/tv_10sp_blue_bold"
                android:padding="@dimen/dp_4"
                android:text="操作时间：8月2日 19：20"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>