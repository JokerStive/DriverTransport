<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:padding="@dimen/dp_10"
    android:orientation="vertical">

    <TextView

        android:layout_gravity="center_horizontal"
        style="@style/tv_10sp_blue_bold"
        android:text="更新节点"
        android:textSize="@dimen/sp_16"
        android:textStyle="normal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        style="@style/tv_10sp_blue_bold"
        android:text="步骤说明："
        android:textSize="@dimen/sp_12"
        android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_step_desc"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            style="@style/tv_10sp_blue_bold"
            tools:text="点九九二九九二九二二点九九二九九二九二二点九九二九九二九二二"
            android:textSize="@dimen/sp_12"
            android:maxLines="4"
            android:textStyle="normal" />


    </LinearLayout>

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        style="@style/tv_10sp_blue_bold"
        android:text="上传照片："
        android:textSize="@dimen/sp_12"
        android:textStyle="normal" />


    <com.tengbo.module_order.ui.processing.StepPictureRecyclerView
        android:id="@+id/rv_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notice"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20">

        <FrameLayout
            android:id="@+id/rl_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_positive"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_position_bg"
                android:gravity="center_horizontal"
                android:maxLength="4"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:text="提交"
                android:textColor="@color/basic_white" />


        </FrameLayout>


        <FrameLayout
            android:id="@+id/rl_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_negative"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_navigation_gb"
                android:gravity="center_horizontal"
                android:maxLength="4"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:text="取消"
                android:textColor="@color/basic_blue" />
        </FrameLayout>


    </LinearLayout>

</LinearLayout>