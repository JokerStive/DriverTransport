<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_step_name"
        style="@style/tv_10sp_blue_bold"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/sp_16"
        tools:text="更新节点" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/tv_10sp_blue_bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="步骤说明："
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_step_desc"
            style="@style/tv_10sp_blue_bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:maxLines="4"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            tools:text="点九九二九九二九二二点九九二九九二九二二点九九二九九二九二二" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/tv_10sp_blue_bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/contact_name"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_contact_name"
            style="@style/tv_10sp_blue_bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:maxLines="4"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            tools:text="张耳毛" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/tv_10sp_blue_bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/contact_phone"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_contact_phone"
            style="@style/tv_10sp_blue_bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:maxLines="4"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            tools:text="张耳毛" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/tv_10sp_blue_bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/position_name"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_position_name"
            style="@style/tv_10sp_blue_bold"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:maxLines="4"
            android:textSize="@dimen/sp_12"
            android:textStyle="normal"
            tools:text="张耳毛" />


    </LinearLayout>


    <TextView
        style="@style/tv_10sp_blue_bold"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="上传照片："
        android:textSize="@dimen/sp_14" />


    <com.tengbo.module_order.ui.processing.StepPictureRecyclerView
        android:id="@+id/rv_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/common_selector_text_button"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/basic_blue"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_20"
            android:layout_weight="1"
            android:background="@drawable/common_selector_text_button"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/basic_blue"
            android:textSize="@dimen/sp_14"
            android:textStyle="normal" />


    </LinearLayout>

</LinearLayout>