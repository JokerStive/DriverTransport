<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp_20"
    android:paddingLeft="57dp"
    android:paddingRight="57dp"
    android:paddingTop="@dimen/dp_20">

    <TextView
        android:id="@+id/tv_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        tools:text="及将更新订单状态为  “到达”请确认，并通过水印相机拍照！及将更新订单状态为  “到达”请确认，并通过水印相机拍照！" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_notice"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20">

        <FrameLayout
            android:id="@+id/rl_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_positive"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_position_bg"
                android:gravity="center_horizontal"
                android:maxLength="4"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:text="确定拍照"
                android:textColor="@color/basic_white" />


        </FrameLayout>


        <FrameLayout
            android:id="@+id/rl_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_negative"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_navigation_gb"
                android:gravity="center_horizontal"
                android:maxLength="4"
                android:maxLines="1"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:text="取消"
                android:textColor="@color/basic_blue" />
        </FrameLayout>


    </LinearLayout>


</RelativeLayout>